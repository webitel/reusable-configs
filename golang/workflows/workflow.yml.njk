{% set workflow = {
    version = '01d63ddea17885ce796f8d634580c2b188a1e735',
    run-name = '${{ github.ref_name }}#${{ github.run_number }} - ${{ github.event.head_commit.message || github.event.pull_request.title || 'Manual trigger' }}',
    concurrency-group = '${{ github.workflow }}-${{ github.ref }}'
} %}

{% set branch = {
    default = '${{ github.event.repository.default_branch }}',
    triggered = '${{ github.ref_name }}',
    run-number = '${{ github.run_number }}',
    prerelease = '${{ github.event.repository.default_branch == github.ref_name && 'dev' || '' }}',
    version = '${{ needs.prepare.outputs.version }}',
    description = '${{ github.event.repository.description }}',
    tag = '${{ github.event.repository.default_branch != github.ref_name && format('{0}-{1}', needs.prepare.outputs.version, github.run_number) || '' }}',
    commit-sha = '${{ github.sha }}',
    environment = '${{ github.event.repository.default_branch == github.ref_name && 'acceptance' || format('{0}-releases', needs.prepare.outputs.version) }}'
} %}

{% set vars = {
    package = '${{ vars.SERVICE_NAME }}',
    package-pattern = '${{ vars.SERVICE_NAME }}*.deb',
    component = '${{ github.event.repository.default_branch == github.ref_name && 'dev' || format('{0}-releases', needs.prepare.outputs.version) }}',
    codename = '${{ vars.DEB_CODENAME }}',
    aws-bucket = '${{ vars.DEB_AWS_BUCKET_NAME }}',
    aws-region = '${{ vars.DEB_AWS_DEFAULT_REGION }}'
} %}

name: Workflow ({{ name }})
run-name: >
  {{ name }}@{{ workflow.run-name }}

on:
  push:
    branches: [ {{ default-branch | default("main", true) }}, "v[0-9]+.[0-9]+" ]

permissions: { contents: read }
concurrency:
  group: {{ workflow.concurrency-group }}
  cancel-in-progress: true

jobs:
  prepare:
    name: Prepare
    uses: webitel/reusable-workflows/.github/workflows/golang-prepare.yml@{{ workflow.version }}
    with:
      development-branch: {{ branch.development }}
      triggered-branch: {{ branch.triggered }}

  checks:
    name: Checks
    needs: [ prepare ]
    uses: webitel/reusable-workflows/.github/workflows/golang-checks.yml@{{ workflow.version }}
    permissions:
      contents: read
      actions: read
      security-events: write

  compile:
    name: Build
    needs: [ prepare ]
    uses: webitel/reusable-workflows/.github/workflows/golang-build.yml@{{ workflow.version }}
    with:
      binary-name: {{ build.binary-name }}
      ldflags: >
        {{ build.ldflags }}

      version: {{ branch.version }}
      version-build: {{ branch.run-number }}
      prerelease: {{ branch.prerelease }}
      package-name: {{ vars.package }}
      package-description: {{ branch.description }}
      package-contents: |
        {{ build.package-contents }}

      scripts: |
        {{ build.scripts }}

  deploy:
    name: Deploy
    needs: [ prepare, compile ]
    uses: webitel/reusable-workflows/.github/workflows/_deploy.yml@{{ workflow.version }}
    permissions: { contents: write }
    secrets: inherit
    with:
      tag: {{ branch.tag }}
      tag-target-commitish: {{ branch.commit-sha }}
      repository-environment: {{ branch.environment }}
      deb-package-pattern: {{ vars.package-pattern }}
      deb-component: {{ vars.component }}
      deb-codename: {{ vars.codename }}
      deb-aws-bucket-name: {{ vars.aws-bucket }}
      deb-aws-bucket-region: {{ vars.aws-region }}